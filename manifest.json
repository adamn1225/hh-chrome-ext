{
    "version": "1.0.2",
    "manifest_version": 3,
    "name": "Heavy Construct - Haul Quotes",
    "description": "Get a Haul Rate while searching the web for equipment - published by SSTA Inc.",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Heavy Construct Quote Extension"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "hc-28.webp",
        "48": "hc-28.webp",
        "128": "hc-28.webp"
    },
"content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}