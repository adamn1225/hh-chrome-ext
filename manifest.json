{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "HH Quote Extension",
    "description": "Get a Haul Rate while searching the web for equipment",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "HH Quote Extension"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}